#!/bin/bash
DOTFILES=~/dotfiles

cd $DOTFILES
git pull

# Vim
vim +'PlugClean --sync' +qa
vim +'PlugInstall --sync' +qa

# NeoVim
if [ -n "$(command -v nvim)" ]; then
	nvim +'PackerSync' +qa
	nvim +'PackerUpdate' +qa
fi

#WSL
if [ -d "/mnt/c/Users/jglazik/" ]; then
  cp $DOTFILES/.vimrc /mnt/c/Users/jglazik
fi
