#!/bin/bash

# NeoVim section
mkdir -p ~/bin
wget --quiet https://github.com/neovim/neovim/releases/download/nightly/nvim.appimage --output-document ~/bin/nvim
chmod u+x ~/bin/nvim
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
mkdir -p ~/.config
ln -sf $DOTFILES/nvim ~/.config/nvim
mkdir -p ~/.local/share/nvim/swapfiles
nvim +'PlugInstall --sync' +qa

